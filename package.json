{
  "name": "ielts-writing-practice-monorepo",
  "version": "1.0.0",
  "description": "IELTS Writing Practice Application - Full Stack Monorepo",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "build": "npm run build --workspace=client",
    "start": "concurrently \"npm run start --workspace=client\" \"npm run start --workspace=server\"",
    "install:all": "npm install && npm run install:client && npm run install:server",
    "install:client": "npm install --workspace=client",
    "install:server": "npm install --workspace=server",
    "db:migrate": "npm run db:migrate --workspace=server",
    "db:seed": "npm run db:seed --workspace=server"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": ["ielts", "writing", "practice", "monorepo", "react", "nodejs", "mysql"],
  "author": "",
  "license": "MIT"
}